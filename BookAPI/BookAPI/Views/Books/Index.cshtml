@model IEnumerable<BookAPI.Models.Book>
@{
    ViewData["Title"] = "Books";
}

    <style>
        .table {
            background-color: blanchedalmond;
        }

        body {
            background-color: powderblue;
        }

        .container {
            background-color: powderblue;
        }
    </style>
    <h1>Books By Categories</h1>
    <div class="container">

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.PlotDescription)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        <img src="@Url.Content(item.Photo)" height="200" width="200" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)Rs
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.PlotDescription)
                    </td>

                    <td>
                    <td>
                        <button class="btn btn-outline-primary"> <a asp-action="ShipmentDet" asp-route-id="@item.Id">Buy Book</a> </button>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <button class="btn btn-outline-primary"> <a asp-action="DetailItems" asp-route-id="@item.Id">Preview Book</a></button>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        @*<button class="btn btn-outline-primary"> <a asp-action="AddCart" asp-controller="Cart" asp-route-id="@item.Id">Add to Cart</a></button>*@
                    <input type="button" value="Add" class="btn btn-primary" onclick="location.href='@Url.Action("AddCart", "Cart",item)'" />
                    </td>
                </tr>
                }
            </tbody>
        </table>

        </div>
